<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deprosa</title>

    @Styles.Render("~/Styles/base")


    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/jquery-ui")
    @Scripts.Render("~/Scripts/jqueryUploader")
    @Scripts.Render("~/Scripts/jqueryUploaderIframe")
    @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Deprosa", "Index", "Home")
                </ul>
                @Html.Partial("Partial/_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderSection("SearchPartial", false)

        @RenderBody()
        <hr />
    </div>
    <footer class="container">
        <div class="navbar navbar-inverse navbar-fixed-bottom">
            <h4 class="text-center text-info">&copy; 2016 - Deprosa</h4>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
