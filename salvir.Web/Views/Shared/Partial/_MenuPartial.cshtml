@model deprosa.Web.Model.ViewModel.MenuViewModel
<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            @if (Model.SelectedMainCategory == null)
            {
                foreach (var menu in Model.MainCategories)
                {
                    <li>@Html.ActionLink(menu.Name, "Index", "SaleListing", new {selected = menu.ID}, null)</li>
                }
            }
            else
            {
                foreach (var menu in Model.SubCategories)
                {
                    <li>@Html.ActionLink(menu.Name, "Index", "SaleListing", new { selected = menu.ID }, null)</li>
                }
            }
        </ul>
    </div>
</div>
